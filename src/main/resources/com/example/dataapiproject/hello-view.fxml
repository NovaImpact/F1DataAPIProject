<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="550.0" prefWidth="800.0" spacing="15.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dataapiproject.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <!-- Title Label -->
    <Label style="-fx-text-fill: #e10600;" text="F1 2024 Practice Session Results" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>
    
    <!-- Status Label -->
    <Label fx:id="statusLabel" style="-fx-text-fill: #333333;" text="Click button to fetch data" textAlignment="CENTER" wrapText="true">
        <font>
            <Font size="13.0" />
        </font>
    </Label>
    
    <!-- Fetch Button -->
    <Button fx:id="fetchButton" onAction="#handleFetchData" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #e10600; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Fetch F1 Data">
        <font>
            <Font size="14.0" />
        </font>
    </Button>
    
    <!-- TableView for displaying F1 data -->
    <TableView fx:id="dataTableView" prefHeight="400.0" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="positionColumn" prefWidth="60.0" style="-fx-alignment: CENTER;" text="Pos" />
            <TableColumn fx:id="driverColumn" prefWidth="180.0" text="Driver" />
            <TableColumn fx:id="teamColumn" prefWidth="280.0" text="Team" />
            <TableColumn fx:id="timeColumn" prefWidth="140.0" style="-fx-alignment: CENTER;" text="Best Time" />
            <TableColumn fx:id="gapColumn" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Gap" />
        </columns>
    </TableView>
    
    <!-- Footer Label -->
    <Label style="-fx-text-fill: #666666; -fx-font-size: 10px;" text="Data provided by F1 API (f1api.dev)" textAlignment="CENTER" />
</VBox>
